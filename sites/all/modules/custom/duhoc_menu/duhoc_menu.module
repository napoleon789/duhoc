function duhoc_menu_export_word($id) {
  global $user;
  $output = node_load($id);
  $cid = $output -> field_select_contract['und'][0]['value'];
  $uid = $user -> uid;
  $query = db_query("SELECT nid,cid FROM {contract_student} WHERE nid =:nid AND cid = :cid",array(':nid' =>$id,':cid' =>$cid)) -> rowCount();
  if($query == 0) {
    $record = array (
      'nid' => $id,
      'cid' => $cid,
      'uid' => $uid,
    );
    drupal_write_record('contract_student',$record);
  }
  $output = get_object_vars($output);
  return $output;
}

