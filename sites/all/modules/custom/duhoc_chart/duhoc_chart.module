function duhoc_chart_data_revenue($area = null) {
  $data ='';
  for($i = 1 ; $i <= 12; $i ++) {
    $value = duhoc_chart_revenue_value($area,$i,null);
    if(empty($value))
      $value = 0;
    $revenue = duhoc_chart_revenue($area,$i,null);
    if(empty($revenue))
      $revenue = 0;
    if($i<12)
    $data .= '["'.duhhoc_chart_convert_month($i).'", '.$value.', '.$revenue.'],' ;
    else
      $data .= '["'.duhhoc_chart_convert_month($i).'", '.$value.', '.$revenue.']' ;
  }
  return $data;
}
function duhoc_chart_data($area = null) {
  global $user;
  $data ='';
  if($area != null) {
    for($i = 1 ; $i <= 12; $i ++) {
      $taget = duhoc_chart_tagets($area,$i,null);
      if(!isset($taget))
        $taget = 0;
      if($i != 12)
      $data .= '["'.duhhoc_chart_convert_month($i).'", '.duhoc_chart_sum_contract($area,$i,null).', '.$taget.'], ' ;
      if($i ==12)
        $data .= '["'.duhhoc_chart_convert_month($i).'", '.duhoc_chart_sum_contract($area,$i,null).', '.$taget.'] ' ;
    }
  }
  else {
    for($i = 1 ; $i <= 12; $i ++) {
      $taget = duhoc_chart_tagets($area,$i,null);
      if(!isset($taget))
        $taget = 0;
      if($i !=12)
      $data .= '["'.duhhoc_chart_convert_month($i).'", '.duhoc_chart_sum_contract(null,$i,null).', '.$taget.'], ' ;
      if($i ==12)
        $data .= '["'.duhhoc_chart_convert_month($i).'", '.duhoc_chart_sum_contract(null,$i,null).', '.$taget.'] ' ;
    }
  }
  return $data;
}

function duhoc_chart_tagets($area = null,$moth,$year) {
  $str =duhoc_chart_list_member($area);
  if(!empty($str)) {
    $query = db_query("SELECT SUM(target.field_target_value) as giatri
                    FROM field_data_field_target as target INNER JOIN field_data_field_th_ng as mont
                    ON target.delta = mont.delta
                    WHERE FROM_UNIXTIME(mont.field_th_ng_value,'%c') = ".$moth."
                    AND target.entity_id IN (".$str.")
                    AND target.entity_id = mont.entity_id");
    $num = $query ->rowCount();
    if($num >0) {
      foreach ($query as $record) {
        $result =  $record ->giatri;
      }
    }
    else $result = 0;
  }
  else $result = 0;

return $result;
}

function duhoc_chart_revenue($area = null,$moth,$year) {
  $str =duhoc_chart_list_member($area);
  if(!empty($str)) {
    $query = db_query("SELECT SUM(reve.field_revenue_value) as giatri
                    FROM field_data_field_revenue as reve INNER JOIN field_data_field_th_ng as mont
                    ON reve.delta = mont.delta
                    WHERE FROM_UNIXTIME(mont.field_th_ng_value,'%c') = ".$moth."
                    AND reve.entity_id IN (".$str.")
                    AND reve.entity_id = mont.entity_id");
    $num = $query ->rowCount();
    if($num >0) {
      foreach ($query as $record) {
        $result =  $record ->giatri;
      }
    }
    else $result = 0;
  }
  else $result = 0;

  return $result;
}

